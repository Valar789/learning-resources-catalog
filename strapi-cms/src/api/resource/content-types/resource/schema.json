{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "blocks"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "article",
        "video",
        "tutorial",
        "book",
        "course"
      ]
    },
    "coverImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "externalUrl": {
      "type": "string"
    },
    "publishDate": {
      "type": "datetime"
    }
  }
}
